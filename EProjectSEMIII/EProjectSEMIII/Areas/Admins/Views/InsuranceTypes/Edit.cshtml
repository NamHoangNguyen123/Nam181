@model EProjectSEMIII.Models.InsuranceType

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admins/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

<h4>InsuranceType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InsurenceTypeId" />
            <div class="form-group">
                <label asp-for="TypeOfInsurence" class="control-label"></label>
                <input asp-for="TypeOfInsurence" class="form-control" />
                <span class="text-danger">@ViewBag.CheckName</span>
                <span asp-validation-for="TypeOfInsurence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Status</p>
                <input type="radio" asp-for="Status" value="0" checked>
                <label>Show</label><br>
                <input type="radio" asp-for="Status" value="1">
                <label>Hide</label><br>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

