@model IEnumerable<EProjectSEMIII.Models.VehicleInfomation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_AdminLayout.cshtml";
}
<h2>All Vehicle Information</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VehicleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerRecord.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleVersion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleBodyNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleEngine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleNumber)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Status)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.InsideVehicleType.Name)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerRecord.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleVersion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleBodyNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleEngine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleNumber)
            </td>
            @*@if (item.Status == 0)
            {
                <td style="color:red"> Un Active</td>
            }
            else
            {
                <td style="color:green">Activated</td>
            }*@

            <td>
                @Html.DisplayFor(modelItem => item.InsideVehicleType.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.VehicleInfomationId" title="Click here to give estimate aboyut vehicle for customer!!">Details</a>
                @*<a asp-action="Delete" asp-route-id="@item.VehicleInfomationId">Delete</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>
