@model EProjectSEMIII.Models.ClaimDetail

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="page-title-section bg-img cover-background left-overlay-dark" data-overlay-dark="6" data-background="/Client/img/banner/slide-05.jpg">
    <div class="container position-unset">
        <div class="page-title mx-1-6 mx-lg-2-0 mx-xl-2-6 mx-xxl-2-9">
            <div class="row">
                <div class="col-md-12">
                    <h1>Claim Create</h1>
                </div>
                <div class="col-md-12">
                    <ul class="ps-0">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a href="#!">Claim Create</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">

        <form class="" asp-action="Create" asp-route-idCustomerPolicy="@Model.CustomerPolicyId" method="post">
            <div class="quform-elements">
                <div class="row">
                    <!-- Begin Text input element -->
                    <div class="col-md-6">
                        <div class="quform-element">
                            <label for="name">Policy number</label>
                            <div class="quform-input">
                                <input class="form-control" type="text" readonly asp-for="PolicyNumber" value="@Model.PolicyNumber" />
                                <span asp-validation-for="PolicyNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <!-- End Text input element -->
                    <!-- Begin Text input element -->
                    <div class="col-md-6">
                        <div class="quform-element">
                            <label for="email">Policy start date </label>
                            <div class="quform-input">
                                <input class="form-control" type="text" readonly asp-for="PolicyStartDate" value="@Model.PolicyStartDate.ToString("dd MMM yyyy")" />
                                <span asp-validation-for="PolicyStartDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <!-- End Text input element -->
                    <!-- Begin Text input element -->
                    <div class="col-md-6">
                        <div class="quform-element">
                            <label for="subject">Policy end date</label>
                            <div class="quform-input">
                                <input class="form-control" type="datetime" readonly asp-for="PolicyEndDate" value="@Model.PolicyEndDate.ToString("dd MMM yyyy")" />
                                <span asp-validation-for="PolicyEndDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="quform-element">
                            <label for="subject">CustomerName</label>
                            <div class="quform-input">
                                <input class="form-control" type="text" readonly asp-for="CustomerName" value="@Model.CustomerName" />
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="quform-element">
                            <label for="subject">Place of accident <span class="quform-required">*</span></label>
                            <div class="quform-input">
                                <input class="form-control" type="text" value="" asp-for="PlaceOfAccident" />
                                <span asp-validation-for="PlaceOfAccident" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="quform-element">
                            <label for="subject">Date of accident <span class="quform-required">*</span></label>
                            <div class="quform-input">
                                @Html.TextBox("DateOfAccident", Model.DateOfAccident, "{0:yyyy-MM-dd}", new { @style = "width:100%", type = "date",@class= "form-control" })
                                <span asp-validation-for="DateOfAccident" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="quform-element">
                            <label for="subject">Insured amout($) <span class="quform-required"></span></label>
                            <div class="quform-input">
                                <input class="form-control" step="0.01" readonly type="number" value="@ViewBag.InsuredAmout" asp-for="InsuredAmout" />
                                <span asp-validation-for="InsuredAmout" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="quform-element">
                            <label for="subject">The amount you want to claim(<=@ViewBag.InsuredAmout $) <span class="quform-required">*</span></label>
                            <div class="quform-input">
                                <input class="form-control" step="0.01" type="number" asp-for="ClaimableAmout" value="" />
                                <span asp-validation-for="ClaimableAmout" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <input class="form-control" type="hidden" asp-for="CustomerPolicyId" value="@Model.CustomerPolicyId" />
                    <!-- End Text input element -->
                    <!-- Begin Submit button -->
                    <div class="col-md-12">
                        <div class="">
                            <button class="butn-style3" type="submit"><span>Send Message</span></button>
                        </div>
                    </div>
                    <!-- End Submit button -->

                </div>
            </div>
        </form>

    </div>
</section>