@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- metas -->
    <meta charset="utf-8" />
    <meta name="author" content="Chitrakoot Web" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="keywords" content="Insurance Agency HTML Template" />
    <meta name="description" content="Secure - Insurance Agency HTML Template" />

    <!-- title  -->
    <title>Secure - Insurance Agency HTML Template</title>

    <!-- favicon -->
    <link rel="shortcut icon" href="~/Client/img/logos/favicon.png">
    <link rel="apple-touch-icon" href="~/Client/img/logos/apple-touch-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/Client/img/logos/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/Client/img/logos/apple-touch-icon-114x114.png">

    <!-- plugins -->
    <link rel="stylesheet" href="~/Client/css/plugins.css">

    <!-- search css -->
    <link rel="stylesheet" href="~/Client/search/search.css">

    <!-- quform css -->
    <link rel="stylesheet" href="~/Client/quform/css/base.css">

    <!-- theme core css -->
    <link href="~/Client/css/styles.css" rel="stylesheet">

</head>

<body>


    <!-- PAGE LOADING
    ================================================== -->
    <div id="preloader"></div>

    <!-- MAIN WRAPPER
    ================================================== -->
    <div class="main-wrapper">

        <!-- HEADER
        ================================================== -->
        <header class="header-style3">

            <div class="navbar-default">

                <!-- start top search -->
                <div class="top-search bg-dark">
                    <div class="container-fluid px-lg-1-6 px-xl-2-5 px-xxl-2-9">
                        <form class="search-form" action="https://secure.websitelayout.net/search.html" method="GET" accept-charset="utf-8">
                            <div class="input-group">
                                <span class="input-group-addon cursor-pointer">
                                    <button class="search-form_submit fas fa-search text-white" type="submit"></button>
                                </span>
                                <input type="text" class="search-form_input form-control" name="s" autocomplete="off" placeholder="Type & hit enter...">
                                <span class="input-group-addon close-search mt-1"><i class="fas fa-times"></i></span>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- end top search -->

                <div class="container-fluid px-lg-1-6 px-xl-2-5 px-xxl-2-9">
                    <div class="row align-items-center">
                        <div class="col-12 col-lg-12">
                            <div class="menu_area alt-font">
                                <nav class="navbar navbar-expand-lg navbar-light p-0">
                                    <div class="navbar-header navbar-header-custom">
                                        <!-- start logo -->
                                        <a asp-controller="Home" asp-action="Index" class=" logodefault"><img id="logo" src="~/Client/img/logos/logo.png" alt="logo" style="width:50%" /></a>
                                        <!-- end logo -->
                                    </div>

                                    <div class="navbar-toggler"></div>

                                    <!-- start menu area -->
                                    @await Html.PartialAsync("_menu.cshtml")
                                    <!-- start attribute navigation -->
                                    <div class="attr-nav align-items-lg-center ms-lg-auto main-font">
                                        <ul>
                                            @if (HttpContextAccessor.HttpContext.Session.GetInt32("UserIdLogin") != null)
                                            {
                                                <li class="d-none d-lg-inline-block"><a asp-controller="Login" asp-action="Logout" class="butn-style3 secondary medium text-white">Logout</a></li>

                                            }
                                            else
                                            {
                                                <li class="d-none d-lg-inline-block"><a asp-controller="Login" asp-action="Login" class="butn-style3 secondary medium text-white">Login</a></li>

                                            }

                                        </ul>
                                    </div>
                                    <!-- end attribute navigation -->
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        @RenderBody()

        <!-- FOOTER
        ================================================== -->
        <footer class="footer2 bg-img theme-overlay-blue-dark pt-6 pt-md-8" data-overlay-dark="7" data-background="img/bg/footer-map.png">
            <div class="container">
                <div class="row mb-6 mb-md-8 mt-n1-9">
                    <div class="col-md-6 col-lg-4 mt-1-9 wow fadeIn" data-wow-delay="200ms">
                        <div class="footer-top">
                            <div class="mb-4">
                                <img src="~/Client/img/logos/logo-footer.png" alt="...">

                            </div>
                            <p class="mb-4 text-white opacity9">Secure dolor amet consectetur adipisicing elit sed eiusm tempor incidi dunt labore dolore magna aliqua enim.</p>
                            <ul class="list-unstyled mb-0">
                                <li class="d-inline-block me-3"><a href="#!" class="text-primary"><i class="ti-facebook"></i></a></li>
                                <li class="d-inline-block me-3"><a href="#!" class="text-primary"><i class="ti-twitter-alt"></i></a></li>
                                <li class="d-inline-block me-3"><a href="#!" class="text-primary"><i class="ti-instagram"></i></a></li>
                                <li class="d-inline-block me-3"><a href="#!" class="text-primary"><i class="ti-linkedin"></i></a></li>
                                <li class="d-inline-block"><a href="#!" class="text-primary"><i class="ti-dribbble"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 mt-1-9 wow fadeIn" data-wow-delay="350ms">
                        <div class="ps-lg-1-9">
                            <h3 class="text-primary mb-1-9 h5">Quick Links</h3>
                            <ul class="footer-link list-unstyled mb-0">
                                <li class="mb-3"><a asp-action="Index" asp-controller="VehicleInfomation">My Vehicle</a></li>
                                <li class="mb-3"><a asp-action="Edit" asp-controller="CustomerRecord">Edit Profile</a></li>
                                <li class="mb-3"><a asp-action="Index" asp-controller="Contact">Contact Us</a></li>
                                <li class="mb-3"><a asp-action="Index" asp-controller="CustomerSupport">Customer Support</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 mt-1-9 wow fadeIn" data-wow-delay="650ms">
                        <div>
                            <h3 class="text-primary mb-1-9 h5">Contact Us</h3>
                            <p class="mb-1-9 text-white opacity9">We bring the years, worldwide experience, and endurance.</p>
                            <ul class="footer-link list-unstyled mb-0">
                                <li class="mb-3"><a href="#!" class="ps-0"><i class="ti-mobile display-28 align-middle text-primary pe-3"></i>(+44) 123 456 789</a></li>
                                <li class="mb-3"><a href="#!" class="ps-0"><i class="ti-email display-28 align-middle text-primary pe-3"></i>example@yourdomain.com</a></li>
                                <li><i class="ti-location-pin display-28 align-middle text-primary pe-3"></i>66 Guild Street 512B.</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="border-top border-color-light-white py-4 wow fadeIn" data-wow-delay="200ms">
                    <div class="text-center">
                        <p class="d-inline-block mb-0 text-white">&copy; <span class="current-year"></span> Secure Powered by <a href="https://www.chitrakootweb.com/" target="_blank" class="text-primary text-white-hover">TTN Project</a></p>
                    </div>
                </div>
            </div>
        </footer>

    </div>

    <!-- BUY TEMPLATE
    ================================================== -->
    

    <!-- start scroll to top -->
    <a href="#!" class="scroll-to-top"><i class="fas fa-angle-up" aria-hidden="true"></i></a>
    <!-- end scroll to top -->
    <!-- all js include start -->
    <!-- jQuery -->
    <script src="~/Client/js/jquery.min.js"></script>


    <!-- popper js -->
    <script src="~/Client/js/popper.min.js"></script>


    <!-- bootstrap -->
    <script src="~/Client/js/bootstrap.min.js"></script>


    <!-- jquery -->
    <script src="~/Client/js/core.min.js"></script>


    <!-- Search -->
    <script src="~/Client/search/search.js"></script>


    <!-- custom scripts -->
    <script src="~/Client/js/main.js"></script>


    <!-- form plugins js -->
    <script src="~/Client/quform/js/plugins.js"></script>


    <!-- form scripts js -->
    <script src="~/Client/quform/js/scripts.js"></script>


    <!-- all js include end -->

</body>

</html>