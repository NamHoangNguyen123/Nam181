@model IEnumerable<EProjectSEMIII.Models.VehicleInfomation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-title-section bg-img cover-background left-overlay-dark" data-overlay-dark="6" data-background="/Client/img/banner/slide-05.jpg">
    <div class="container position-unset">
        <div class="page-title mx-1-6 mx-lg-2-0 mx-xl-2-6 mx-xxl-2-9">
            <div class="row">
                <div class="col-md-12">
                    <h1>My Vehicle</h1>
                </div>
                <div class="col-md-12">
                    <ul class="ps-0">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a href="#!">My Vehicle</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- SERVICES
================================================== -->
<section>
    <div class="container">
        <div class="row mt-n2-2">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-xl-3 mt-2-2 wow fadeIn" data-wow-delay="200ms">
                    <div class="card card-style8">
                        <a href="~/Views/CustomerPolicy/Index.cshtml"></a>
                        <div class="card-body px-1-9 py-2-9">
                            <div class="icon-box mb-1-9 mb-2-6">
                                <img src="~/Client/img/content/icon-car.png" class="z-index-9 position-relative" alt="">
                                <div class="box-circle primary"></div>
                            </div>
                            <h3 class="h5 mb-3"><a href="service-details.html">@item.VehicleName</a></h3>
                            <span>VehicleType:</span>  <h4 class="h5 mb-3"><a href="service-details.html">@item.InsideVehicleType.Name</a></h4>
                            <span>VehicleNumber:</span><h4 class="h5 mb-3"><a href="service-details.html">@item.VehicleNumber</a></h4>
                            <a asp-action="Details" asp-route-id="@item.VehicleInfomationId" class="text-dark text-primary-hover font-weight-600">Show more <i class="ti-arrow-right ms-2 align-middle display-30"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
