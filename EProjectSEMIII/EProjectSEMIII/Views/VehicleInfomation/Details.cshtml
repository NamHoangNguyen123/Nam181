@model EProjectSEMIII.Models.VehicleInfomation

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-title-section bg-img cover-background left-overlay-dark" data-overlay-dark="6" data-background="/Client/img/banner/slide-05.jpg">
    <div class="container position-unset">
        <div class="page-title mx-1-6 mx-lg-2-0 mx-xl-2-6 mx-xxl-2-9">
            <div class="row">
                <div class="col-md-12">
                    <h1>Vehicle Details</h1>
                </div>
                <div class="col-md-12">
                    <ul class="ps-0">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a href="#!">Vehicle Details</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-4 wow fadeIn" data-wow-delay="400ms" style="visibility: visible; animation-delay: 400ms; animation-name: fadeIn;">
                <div class="bg-light p-4 p-xl-5">
                    <div class="title mb-1-9 text-start">
                        <h3 class="h4 text-primary">@Model.VehicleName</h3>
                    </div>
                    <ul class="mb-0 list-unstyled ps-0">
                        <li class="mb-3">
                            <span class="text-dark font-weight-700"> OwnerOfVehicle:</span> <span class="float-end display-30">@Model.OwnerOfVehicle</span>
                        </li>
                        <li class="mb-3">
                            <span class="text-dark font-weight-700"> VehicleModel:</span> <span class="float-end display-30">@Model.VehicleModel</span>
                        </li>
                        <li class="mb-3">
                            <span class="text-dark font-weight-700">VehicleVersion:</span> <span class="float-end display-30">@Model.VehicleVersion</span>
                        </li>
                        <li class="mb-3">
                            <span class="text-dark font-weight-700"> VehicleRate:</span> <span class="float-end display-30">@Model.VehicleRate</span>
                        </li>
                        <li class="mb-3">
                            <span class="text-dark font-weight-700"> VehicleBodyNumber:</span> <span class="float-end display-30">@Model.VehicleBodyNumber</span>
                        </li>
                        <li class="mb-3">
                            <span class="text-dark font-weight-700"> VehicleEngine:</span> <span class="float-end display-30">@Model.VehicleEngine</span>
                        </li>
                        <li class="mb-3">
                            <span class="text-dark font-weight-700"> VehicleNumber:</span> <span class="float-end display-30">@Model.VehicleNumber</span>
                        </li>
                        <li class="mb-0">
                            <span class="text-dark font-weight-700"> InsideVehicleType:</span> <span class="float-end display-30">@Model.InsideVehicleType.Name</span>
                        </li>
                    </ul>
                </div>
            </div>



            <div class="col-lg-2 mb-1-9 mb-lg-0 wow fadeIn" data-wow-delay="200ms" style="visibility: visible; animation-delay: 200ms; animation-name: fadeIn;">
                <div class="bd-example">
                    <a asp-action="index" asp-controller="Estimate" asp-route-vehicleNumber="@Model.VehicleNumber" class="butn-style2 secondary w-100"><span>Estimate</span></a>
                </div>
                <div class="bd-example">
                    <a asp-action="index" asp-controller="CustomerPolicy" asp-route-vehicleNumber="@Model.VehicleNumber" class="butn-style2 secondary w-100"><span>Insurance</span></a>
                </div>
            </div>
            <div class="col-lg-3"></div>
        </div>
    </div>
</section>