@model IEnumerable<EProjectSEMIII.Models.CustomerSupport>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="page-title-section bg-img cover-background left-overlay-dark" data-overlay-dark="6" data-background="/Client/img/banner/slide-05.jpg">
    <div class="container position-unset">
        <div class="page-title mx-1-6 mx-lg-2-0 mx-xl-2-6 mx-xxl-2-9">
            <div class="row">
                <div class="col-md-12">
                    <h1>Support</h1>
                </div>
                <div class="col-md-12">
                    <ul class="ps-0">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a href="#!">Support</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- SERVICE DETAILS
================================================== -->
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 order-2 order-lg-1 wow fadeIn" data-wow-delay="200ms">
                <div class="sidebar pe-xl-4">
                    <div class="widget mb-1-9 p-2-2">
                        <div class="media mb-4">
                            <i class="ti-mobile text-primary display-23"></i>
                            <div class="ms-3">
                                <h4 class="mb-1 h6">Phone</h4>
                                <span> (+84) 123 456 789</span>
                            </div>
                        </div>
                        <div class="media mb-4">
                            <i class="ti-email text-primary display-23"></i>
                            <div class="ms-3">
                                <h4 class="mb-1 h6">Email</h4>
                                <span>ttnProject@gmail.com</span>
                            </div>
                        </div>
                    </div>
                    <div class="bg-img theme-overlay cover-background rounded" data-overlay-dark="8" data-background="img/bg/bg-03.jpg">
                        <div class="position-relative z-index-9 text-center py-5">
                            <i class="fas fa-headset text-white mb-4 display-14"></i>
                            <h5 class="text-white mb-4">How can we help?</h5>
                            <div class="separator-line-horrizontal-full bg-white opacity4 mb-4"></div>
                            <ul class="text-center list-unstyled mb-0 ps-0">
                                <li class="text-white mb-2"><i class="fa fa-phone small text-white me-2"></i><a href="#!" class="text-white">+84 1234 567 890</a></li>
                                <li class="text-white"><i class="fa fa-envelope-open small text-white me-2"></i><a href="#!" class="text-white">ttnProject@gmail.com</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 order-1 order-lg-2 mb-2-9 mb-lg-0 wow fadeIn" data-wow-delay="400ms">
                <div class="row">
                    <div class="col-lg-12 mb-2-9">
                        <div id="accordion" class="accordion-style">
                            @foreach (var item in Model)
                            {
                                <div class="card mb-3">
                                    <div class="card-header" id="heading@(@item.CustomerSupportId)">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-bs-toggle="collapse" aria-expanded="false" data-bs-target="#collapse@(item.CustomerSupportId)" aria-controls="collapse@(item.CustomerSupportId)">@item.Question</button>
                                        </h5>
                                    </div>
                                    <div id="collapse@(item.CustomerSupportId)" class="collapse" aria-labelledby="heading@(item.CustomerSupportId)" data-bs-parent="#accordion">
                                        <div class="card-body">
                                           @item.Answer
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
            </div>
        </div>
    </div>
</section>